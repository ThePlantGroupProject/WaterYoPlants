#used to create the database

#This code is what we would use if we were inputting data in backend as well

import sqlite3

conn = sqlite3.connect('waterplants.sqlite')
cur = conn.cursor()

cur.execute('DROP TABLE IF EXISTS WaterCycle')
cur.execute('CREATE TABLE WaterCycle (Plant TEXT, WateringDays INTEGER)')

cur.execute('DROP TABLE IF EXISTS SoilType')
cur.execute('CREATE TABLE SoilType (Plant TEXT, Soil TEXT)')

conn.close()

import sqlite3

conn = sqlite3.connect('waterplants.sqlite')
cur = conn.cursor()

cur.execute('INSERT INTO WaterCycle (Plant, WateringDays) VALUES (?, ?)',
  ('Orchid', 1))
cur.execute('INSERT INTO WaterCycle (Plant, WateringDays) VALUES (?, ?)',
  ('Cactus', 20))
cur.execute('INSERT INTO WaterCycle (Plant, WateringDays) VALUES (?, ?)',
  ('Lily', 2))
cur.execute('INSERT INTO WaterCycle (Plant, WateringDays) VALUES (?, ?)',
  ('Sweet Pea', 0))
cur.execute('INSERT INTO WaterCycle (Plant, WateringDays) VALUES (?, ?)',
  ('Lilac', 5))

cur.execute('INSERT INTO SoilType (Plant, Soil) VALUES (?, ?)',
  ('Orchid', 'Reg'))
cur.execute('INSERT INTO SoilType (Plant, Soil) VALUES (?, ?)',
  ('Cactus', 'Reg'))
cur.execute('INSERT INTO SoilType (Plant, Soil) VALUES (?, ?)',
  ('Lily', 'Sensitive'))
cur.execute('INSERT INTO SoilType (Plant, Soil) VALUES (?, ?)',
  ('Sweet Pea', 'Sensitive'))
cur.execute('INSERT INTO SoilType (Plant, Soil) VALUES (?, ?)',
  ('Lilac', 'Reg'))

conn.commit()

print('WaterCycle:')
cur.execute('SELECT Plant, WateringDays FROM WaterCycle')
for row in cur:
   print(row)

print('SoilType:')
cur.execute('SELECT Plant, Soil FROM SoilType')
for row in cur:
   print(row)

cur.close()
